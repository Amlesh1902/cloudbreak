<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true" scanPeriod="30 seconds">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - [%X{owner:-spring}] [type:%X{resourceType:-springLog}] [id:%X{resourceId:-0}] [name:%X{resourceName:-}] %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.sequenceiq" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="org.hibernate.type" level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="org.hibernate" level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="org.hibernate.SQL" level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="sql-log" level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder">
        <level value="INFO"/>
    </logger>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>