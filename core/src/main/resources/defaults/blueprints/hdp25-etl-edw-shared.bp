          },
          {
            "name":"HCAT"
          },
          {
            "name":"HDFS_CLIENT"
          },
          {
            "name":"HISTORYSERVER"
          },
          {
            "name":"HIVE_CLIENT"
          },
          {
            "name":"HIVE_METASTORE"
          },
          {
            "name":"HIVE_SERVER"
          },
          {
            "name":"JOURNALNODE"
          },
          {
            "name":"LIVY_SERVER"
          },
          {
            "name":"MAPREDUCE2_CLIENT"
          },
          {
            "name":"METRICS_COLLECTOR"
          },
          {
            "name":"METRICS_MONITOR"
          },
          {
            "name":"MYSQL_SERVER"
          },
          {
            "name":"NAMENODE"
          },
          {
            "name":"PIG"
          },
          {
            "name":"RESOURCEMANAGER"
          },
          {
            "name":"SECONDARY_NAMENODE"
          },
          {
            "name":"SPARK_CLIENT"
          },
          {
            "name":"SPARK_JOBHISTORYSERVER"
          },
          {
            "name":"SQOOP"
          },
          {
            "name":"TEZ_CLIENT"
          },
          {
            "name":"WEBHCAT_SERVER"
          },
          {
            "name":"YARN_CLIENT"
          },
          {
            "name":"ZOOKEEPER_CLIENT"
          },
          {
            "name":"ZOOKEEPER_SERVER"
          },
          {
            "name":"RANGER_ADMIN"
          },
          {
            "name":"RANGER_USERSYNC"
          },
          {
            "name":"RANGER_TAGSYNC"
          }
        ],
        "cardinality":"1"
      },
      {
        "name":"worker",
